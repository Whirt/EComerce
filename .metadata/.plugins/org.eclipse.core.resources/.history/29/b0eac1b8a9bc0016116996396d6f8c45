/**
 * Basic Product abstraction
 * 
 * @author Jia Cheng Hu
 */

package product;

import java.awt.Image;

public class Product {

	// product info
	private String name = null ;
	private String brand = null ;
	private String code = null;
	private ProductType type = null ;
	private float price ;
	private String imagePath = null ;
	
	// managing info
	// available boolean tells whether some information are missing
	private boolean available ;
	private int quantity ;
	
	public Product(String name, String brand,
				   String code, ProductType type,
				   float price, String imagePath, int quantity) {
		available = true ;
		
		this.name = name ;
		this.brand = brand ;
		this.code = code ;
		this.type = type ;
		this.price = price ;
		this.imagePath = imagePath ;
		this.quantity = quantity ;
	}
	// void parameter can't be passed to constructor
	private Product() {	; }
	
	// setters
	public void setName(String name) {
		if (name == null)
			available = false ;
		this.name = name ;
	}
	public void setBrand(String brand) {
		if (brand == null)
			available = false ;
		this.brand = brand ;
	}
	public void setCode(String code) {
		if (code == null)
			available = false ;
		this.code = code ;
	}
	public void setType(ProductType type) {
		if (type == ProductType.ALL)
			available = false ;
		this.type = type ;
	}
	public void setPrice(float price) {
		if (price <= 0) 
			available = false ;
		this.price = price ;
	}
	public void setImagePath(String imagePath) {
		if (imagePath == null)
			available = false ;
		this.imagePath = imagePath ;
	}
	public void setQuantity(int quantity) {
		if (quantity < 0) {
			quantity = 0 ;
		}
		this.quantity = quantity ;
	}
	
	// getters
	public String getName() {
		return name ;
	}
	public String getBrand() {
		return brand ;
	}
	public String getCode() {
		return code ;
	}
	public ProductType getType() {
		return type ;
	}
	public float getPrice() {
		return price ;
	}
	public String getImagePath() {
		return imagePath ;
	}
	public int getQuantity() {
		return quantity ;
	}
}

