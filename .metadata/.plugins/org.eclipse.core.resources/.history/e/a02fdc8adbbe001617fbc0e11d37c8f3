package mainpanel;

import java.awt.Color;
import java.awt.FlowLayout;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import javax.swing.BoxLayout;
import javax.swing.JLabel;
import javax.swing.JPanel;
import javax.swing.JTextField;

import adminelements.AdminCommands;
import customerelements.BuyCommands;
import customerelements.ImageCustomerPanel;
import customerelements.ProductProfile;
import table.ECommerceTable;

public class CustomerPanel extends JPanel {

	private BoxLayout layout ;
	private FrameHeader header ;
	private ECommerceTable table ;
	private AdminCommands comands ;
	
	
	public CustomerPanel() {
		super() ;
		
		// generating table
		table = new ECommerceTable() ;
		
		// panel components
		leftPanel = new ImageCustomerPanel() ;
		centerPanel = new ProductProfile() ;
		rightPanel = new BuyCommands(table) ;
		
		FlowLayout layout = new FlowLayout() ;
		setLayout(layout) ;
		add(leftPanel) ;
		add(centerPanel) ;
		add(rightPanel) ;
	}
}
